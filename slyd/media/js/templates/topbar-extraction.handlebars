<div id="topbar" class="navbar navbar-default">
	<div class="nav-container">
		{{render "navigation"}}
	</div>
	<div class="nav-container">
		<span class="url">
			{{#view 'label-with-tooltip' title=controller.url}}
				{{controller.url}}
			{{/view}}
		</span>
	</div>
	<div class="nav-container">
		<span>
			{{#if showContinueBrowsing}}
				{{#bs-button type="primary" small=true clicked="continueBrowsing"}}
					Continue Browsing
				{{/bs-button}}
			{{/if}}
			{{#if showToggleCSS}}
				{{#bs-button size="sm" clicked="toggleCSS" class="togglecss" icon="fa fa-icon fa-file-code-o"}}
					CSS
				{{/bs-button}}
			{{/if}}
		</span>
	</div>
	<span class="pull-right label-align">
		{{bs-label content="Beta" type="danger"}}
	</span>
</div>
