<div style="margin:10px 0px 0px 10px">
	{{#view ASTool.RenameTextField value=name}}
		<div class="editable-name">Project {{name}}</div>
	{{/view}}

	<h4>Spiders</h4>
	<div>
		<div class="scrolling-container ui-corner-all">
			{{#each}}
				<div style="margin:4px 0px 4px 0px">
					{{view ASTool.ButtonView action="editSpider" argument=this label=this minWidth="82%" icon="ui-icon-wrench" class="clear-button"}}
					{{view ASTool.ButtonView action="deleteSpider" argument=this icon="ui-icon-trash" class="textless-button dark-button"}}
				</div>
			{{else}}
				<h3>No spiders for this project.</h3>
			{{/each}}
		</div>
	</div>
</div>

