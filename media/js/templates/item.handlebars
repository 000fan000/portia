
<div style="border:dotted 1px #CCC;margin:10px 10px 1px 0px;padding:5px">
	<div>
		<span style="margin: 2px 0px 0px 10px">
			{{#view ASTool.InlineTextField value=name}}
				<span class="editable-name">Item {{name}}</span>
			{{/view}}
		</span>
		<span style="float: right">
			{{view ASTool.ButtonView action="deleteItem" argument=this icon="ui-icon-trash" class="textless-button red-button"}}
		</span>
	</div>
	<div style="text-align:center; margin-top:20px">
		{{#if view.item.fields}}
			<table style="margin:0 auto;">
				<tr style="font-size:0.9em;font-weight:bold;color:#999"> <td>Field</td> <td>Type</td> <td>Required</td> <td>Vary</td> </tr>
				{{#each view.item.fields}}
					<tr>
						<td>
							{{#view ASTool.InlineTextField value=name}}
								<span class="editable-name">{{name}}</span>
							{{/view}}
						</td>
						<td>{{view ASTool.TypeSelect name="fieldType" value=type itemField=this}}</td>
						<td>{{view ASTool.CheckBox checked=required name="fieldRequired"}}</td>
						<td>{{view ASTool.CheckBox checked=vary name="fieldVary"}}</td>
						<td>{{view ASTool.ButtonView icon="ui-icon-trash" class="textless-button red-button" action="deleteField" argument=view.item argument2=this}}</td>
						{{#if view.mappingAttribute}}
							<td style="padding-bottom:4px;">{{view ASTool.ButtonView icon="ui-icon-circle-triangle-e" label="Map" action="chooseField" argument=view.item argument2=this}}</td>
						{{/if}}
					</tr>
				{{/each}}
			</table>
		{{else}}
			<h5>No fields defined yet.</h5>
		{{/if}}
		<div style="text-align:center; margin-top:10px">
			{{view ASTool.ButtonView action="addField" argument=this icon="ui-icon-circle-plus" label="Field" class="blue-button"}}
		</div>
	</div>
</div>